public class Student {
    private static String name;
    private final int id;
    private final int grades;

    public Student(String name, int id, int grades) {
        this.name = name;
        this.id = id;
        this.grades = grades;
    }


    public static String getName() {
        return name;
    }

    public static Map<String, Integer> createStudents() {
        Map<String, Integer> grades = new HashMap<>();
        Student aiza = new Student("Aiza", 2, 4);
        grades.put(aiza.getName(), 76);
        grades.put(aiza.getName(), 65);
        grades.put(aiza.getName(), 90);
        return grades;
    }

    public static void main(String[] args) {
        calculateIndividualGrade(createStudents());
    }


    public static void calculateAverageOfAll(Map<String, Integer> grades) {
        int totalMarks = 0;
        int total = grades.size();
        for (Map.Entry<String, Integer> entry : grades.entrySet()) {
            totalMarks += entry.getValue();
        }
        int finalAverage = totalMarks/total;

        System.out.println("The average grade of all students across all subjects : " + finalAverage + " %.");
    }


        /*public static void userMenu ( Map <String, Integer > grades){
            boolean running = true;
            while (running) {
                System.out.println("Choose an option:\n1. Add new grade for a student.\n2. Calculate average of all grades. \n3. Display student information.\n4. Display data for all students.");
                Scanner scanner = new Scanner(System.in);
                int choice = scanner.nextInt();
                switch (choice) {
                    case 1:
                        break;
